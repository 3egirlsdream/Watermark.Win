<Application x:Class="JointWatermark.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:JointWatermark"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.Lime.xaml" />

                <!--#加字体名，不是字体文件名。字体名打开字体文件可得-->
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="FZXiJinLJW">
                pack://application:,,,/JointWatermark;component/Resources/font/#FZJinLS-L-GB
            </FontFamily>
            <FontFamily x:Key="FZCuJinLJW">
                pack://application:,,,/JointWatermark;component/Resources/font/#FZJinLS-B-GB
            </FontFamily>

            <FontFamily x:Key="A021-Sounso Sagacity">
                pack://application:,,,/JointWatermark;component/Resources/font/#A021-Sounso Sagacity
            </FontFamily>

            <FontFamily x:Key="Coldiac Free">
                pack://application:,,,/JointWatermark;component/Resources/font/#Coldiac Free
            </FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
