		CloseDrawer.InvokeAsync();
	}


	async void Export()
	{
		HapticFeedback.Default.Perform(HapticFeedbackType.Click);
		var helper = new WatermarkHelper();
		loadingShow = true;
		StateHasChanged();
		int cot = 1;
		foreach (var item in Images)
		{
			loadingMessage[0] = "导出中";
			loadingMessage[1] = $"共{Images.Count}张，目前第{cot++}张";
