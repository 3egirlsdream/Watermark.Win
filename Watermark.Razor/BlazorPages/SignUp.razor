@page "/signup/{FuncType:int}"
@using Components.Layout;
@using Masa.Blazor.Presets.PageStack.NavController
@layout MainLayout
@inject PageStackNavController NavController
@inherits PStackPageBase

<PStackPageBarInit Title="注册" Dense Flat CenterTitle>
</PStackPageBarInit>
<div style="padding:24px;text-align:center;">
    <Watermark.Razor.Components.SignUpContent CloseEvent="@((v) => NavController.Pop())" FuncType="FuncType" />
</div>


@code {
    [Parameter]
    public int FuncType { get; set; } = 0;
    protected override void OnInitialized()
    {
        #if ANDROID
        MainActivity.SetColor?.Invoke(Colors.Grey.Lighten4);
        #endif
        base.OnInitialized();
    }
}