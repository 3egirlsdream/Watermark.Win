<span class="@($"font-weight-light {Class}")" style="@($"display: flex;align-items: center;font-size: {(Small ? "0.8rem" : "0.95rem")};font-weight: {(Bold == null ? "500" : (Bold.Value ? "700" : "300"))}!important;{Style}")">
    @Name
</span>
@code {

    [Parameter]
    public string Class { get; set; }
    [Parameter]
    public string Style { get; set; }
    [Parameter]
    public bool Small { get; set; } = true;

    [Parameter]
    public string Name { get; set; }
    [Parameter]
    public bool? Bold { get; set; } = false;
}